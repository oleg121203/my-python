{
    "name": "Python 3",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.11",
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true,
                "editor.formatOnSaveMode": "file",
                "files.autoSave": "afterDelay",
                "files.autoSaveDelay": 3000,
                "python.formatting.provider": "black",
                "python.formatting.blackArgs": [
                    "--line-length",
                    "88"
                ],
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.sortImports.args": [
                    "--profile",
                    "black"
                ],
                "git.user.name": "Oleg Kizyma",
                "git.user.email": "oleg1203@gmail.com",
                "continue.previewMode": true,
                "python.analysis.languageServerMode": "default",
                "python.analysis.indexing": true,
                "python.analysis.autoImportCompletions": true,
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false
            },
            "extensions": [
                "streetsidesoftware.code-spell-checker",
                "KevinRose.vsc-python-indent",
                "wholroyd.jinja",
                "MS-CEINTL.vscode-language-pack-ru",
                "donjayamanne.python-extension-pack",
                "donjayamanne.python-environment-manager",
                "ms-python.debugpy",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "VisualStudioExptTeam.intellicode-api-usage-examples",
                "VisualStudioExptTeam.vscodeintellicode",
                "dbaeumer.vscode-eslint",
                "ms-azuretools.vscode-docker",
                "batisteo.vscode-django",
                "openai.openai-chatgpt-adhoc",
                "ms-python.autopep8",
                "njpwerner.autodocstring",
                "Continue.continue",
                "GitHub.copilot-chat",
                "GitHub.copilot",
                "ms-python.black-formatter",
                "ms-python.isort",
                "sourcery.sourcery",
                "eamodio.gitlens"
            ]
        }
    },
    "portsAttributes": {
        "9000": {
            "label": "Hello Remote World",
            "onAutoForward": "notify"
        }
    },
    "mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    ],
    "postCreateCommand": "sudo chown -R vscode:vscode /usr/local/lib/python3.11 && sudo apt update && sudo apt upgrade -y && sudo python3 -m pip install --upgrade pip && sudo pip3 install -r requirements.txt && chmod 600 ~/.ssh/id_rsa && chmod 644 ~/.ssh/id_rsa.pub && eval \"$(ssh-agent -s)\" && ssh-add ~/.ssh/id_rsa && git config --global user.name 'Oleg Kizyma' && git config --global user.email 'oleg1203@gmail.com'"
}